<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Dry Field</title>
        {# <link rel="stylesheet" type="text/css" href="static/css/bootstrap.min.css"> #}
        <link rel="stylesheet/less" type="text/css" href="static/css/style.less"/>
        <script src="static/js/lib/less.js" type="text/javascript"></script>
        <script src="/static/js/lib/scrollreveal.min.js" type="text/javascript"></script>

        <link rel="icon" href="static/assets/favicon.png" type="image/png">
    </head>
    <body>
        <div id="score">
            <div>0</div>
            <img src="/static/assets/field.png" alt="score"/>
        </div>

        <div id="game-container">
            <section id="actions">
                <div id="wallet" class="action-child">
                    <img src="/static/assets/banque.png" alt=""/>
                    <p>
                        <span>0</span>&nbsp;&euro;
                    </p>
                </div>

                <div id="main-citern" class="action-child">
                    <img src="/static/assets/citern.png" alt=""/>
                    <p>
                        <span>0</span>&nbsp;L / 40
                    </p>
                </div>
            </section>
            <section id="fields">
                <div class="field">
                    <img src="/static/assets/field.png" alt=""/>
                    <div class="field-progress water">
                        <div>0%</div>
                    </div>
                    <div class="field-progress harvest">
                        <div>0%</div>
                    </div>
                    <button type="button" class="btn-harvest">Vendez la récolte</button>
                </div>

                <div class="field">
                    <img src="/static/assets/field.png" alt=""/>
                    <div class="field-progress water">
                        <div>0%</div>
                    </div>
                    <div class="field-progress harvest">
                        <div>0%</div>
                    </div>
                    <button type="button" class="btn-harvest">Vendez la récolte</button>
                </div>

                <div class="field">
                    <img src="/static/assets/field.png" alt=""/>
                    <div class="field-progress water">
                        <div>0%</div>
                    </div>
                    <div class="field-progress harvest">
                        <div>0%</div>
                    </div>
                    <button type="button" class="btn-harvest">Vendez la récolte</button>
                </div>
            </section>
        </section>
        <script src="/static/js/lib/jquery.3.3.1.min.js" type="text/javascript"></script>
        <script src="/static/js/lib/socket.io.min.js"></script>
        <script src="/static/js/app.js" type="text/javascript"></script>
        <script>
            // Transitions effects
            window.sr = ScrollReveal({'origin': 'bottom', 'distance': '50px', 'duration': 1500, 'reset': false, 'viewFactor': 0.2});
            sr.reveal('#actions > *', null, 250);
            sr.reveal('#fields > *', {
                delay: 500
            }, 250);

            // Autorequire modules transpiled into main app.js
            const requireModule = ['public/js/features/citern/controller.js', 
            'public/js/features/field/controller.js',
            'public/js/features/wallet/controller.js']
            requireModule.forEach((v, i) => {
                require(v)
            })

            // SocketIO
            var socket = io.connect('http://localhost:3000')
        </script>
    </body>
</html>